<div class="container p-5" style="padding-top: 60px;">
<div class="row">
  {{#each notes}}
  <div class="col-md-4"  style="margin-top: 2em;">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        
        <p> {{createdAt}}</p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
    <div><p></p> </div>
  </div>
   
  {{else}}
  <div class="card mx-auto" style="margin-top: 2em;">
    <div class="card-body">
      <h1 class="centrar">Hola {{user.name}}</h1>
      <p clsss="lead centrar">Aún no has escrito ninguna emoción</p>
       <img class="imagen" src="http://drive.google.com/uc?export=view&id=1ZaivGkVvk7hc9f-AlrSp5kSHuHZlJWzZ" alt="Card image cap">
       
      <a href="/notes/add" class="btn btn-success btn-block">¡Crea Una!</a>
    </div>
  </div>
  {{/each}}
</div>
</div>

